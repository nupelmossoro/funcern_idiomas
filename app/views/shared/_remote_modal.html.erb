<%= turbo_frame_tag "remote_modal" do %>
    <!-- Modal -->
    <div class="modal fade" tabindex="-1" id="<%= modal_class %>" aria-labelledby="<%= modal_class %>Label" aria-hidden="true" data-controller="remote-modal" data-action="turbo:before-render@document->remote-modal#hideBeforeRender">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="<%= modal_class %>Label"><%= modal_title %></h5>
                    <!--begin::Close-->
                        <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                            <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                        </div>
                    <!--end::Close-->
                </div>
                <div class="modal-body remote_modal_body" id="remote_modal_body">
                    <%= yield %>
                </div>
            </div>
        </div>
    </div>
<% end %>