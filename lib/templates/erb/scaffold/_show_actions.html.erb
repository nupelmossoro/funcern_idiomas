<%%- model_class=<%= singular_table_name.titleize %> -%>

<%% remote ||=remote %>

 <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class=> 'btn btn-warning me-2', :remote => remote do %>
    <i class="las la-edit"></i> Editar
<%% end %>

<%%= button_to <%= singular_table_name %>_path(<%= singular_table_name %>), :remote=> remote,
    :method => 'delete',
    :data => { :confirm => "Tem certeza que deseja remover?"},
    :class => 'btn btn-danger me-2' do %>
    <i class="las la-trash"></i> Remover
<%% end %>

<%%= link_to new_<%= singular_table_name %>_path, class: "btn btn-primary me-2" do %>
    <i class="las la-plus"></i> Adicionar 
<%% end %>